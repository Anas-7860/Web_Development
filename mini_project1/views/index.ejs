<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body class="m-0">
    <div class="w-full h-screen bg-gray-900 px-5">
      
        <form action="/create" class="p-4" method="post">
          <!-- Input Field -->
          <input 
            type="text" 
            name="name" 
            id="name" 
            class="block bg-gray-800 text-white p-3 mb-4 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500" 
            placeholder="Enter the title"
          >
      
          <!-- Textarea -->
          <textarea 
            name="desc" 
            id="desc" 
            class="block resize-none bg-gray-800 text-white p-3 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500" 
            placeholder="Enter the description" 
            rows="5"
          ></textarea>
          <input type="submit" value="Create User" class="bg-blue-500 text-white p-3 rounded-lg w-[200px] mt-4 cursor-pointer">
        </form>
        
        <div class="tasks flex gap-4 mt-3 px-4">
          <% if (files.length > 0) { %>
            <% files.forEach(function(val) { %>
              <form action="/delete" method="post" class="text-white inline-block rounded-lg bg-gray-700 h-[100px] w-[300px]">
                
                <h1 class="flex justify-center py-3 "><%= val %></h1>
                <input type="hidden" name="name" value="<%= val %>">
                <input type="submit" value="delete" class="bg-red-500 text-white p-3 rounded-lg w-[100px] h-[44px] mt-2 cursor-pointer">
                <a href="/files/<%=val%>" class="text-blue-300 ml-[100px] ">read more..</a>
              </form>
            
            <% }); %>
          <% } else { %>
            <h1 class="text-white ml-5 text-2xl">No tasks yet...</h1>
          <% } %>
        </div>
      </div>
</body>
</html>
